generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement()) @unique
  username String @unique
  password String
  todos Todo[]
}

model Todo {
  id Int @id @default(autoincrement()) @unique
  task String
  completed Boolean @default(false)
  user User @relation(fields: [userId], references: [id])
  userId Int
}